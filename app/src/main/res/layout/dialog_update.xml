<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cập nhật sản phẩm"
        android:textColor="#FB8C00"
        android:textSize="24dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imgFruit_ud"
        android:layout_marginTop="20dp"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/pic"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/edtName_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Tên sản phẩm: " />
    <EditText
        android:id="@+id/edtPrice_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Giá: " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel_up"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#53D1C4"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFADCA"
            android:text="Update"
            android:textColor="#FFFCFD"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>